<?xml version="1.0" standalone="no"?>
<!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 1.1//EN"
  "http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd">
<svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="130" height="130">
  <% 
    squares = [
      [ 
        {colour: data.colours.yellow, opacity: data.opacity.full },
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        {colour: data.colours.yellow, opacity: data.opacity.full }
      ],
      [ 
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        {colour: data.colours.yellow, opacity: data.opacity.full }
      ],
      [ 
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        {colour: data.colours.yellow, opacity: data.opacity.full },
        {colour: data.colours.yellow, opacity: data.opacity.faded }
      ]
    ]
  %>

  <%= partial('facing_grid', locals: {grid: facing_grid(x: 20, y: 20, units: 30, squares: squares)} ) %>

  <%= partial('arrow', locals: {points: horizontal_arrow(x: 33, y: 27, length: 47, direction: :bi).points_string } ) %>
  <%= partial('arrow', locals: {points: diagonal_up_arrow(x: 62, y: 62, length: 25, direction: :bi).points_string } ) %>
</svg>

