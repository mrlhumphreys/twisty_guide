<?xml version="1.0" standalone="no"?>
<!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 1.1//EN"
  "http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd">
<svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="190" height="100">
  <% 
    up_squares = [
      [ 
        {colour: data.colours.yellow, opacity: data.opacity.full },
        {colour: data.colours.yellow, opacity: data.opacity.full }
      ],
      [ 
        {colour: data.colours.yellow, opacity: data.opacity.full },
        {colour: data.colours.yellow, opacity: data.opacity.full }
      ]
    ]
  %>

  <%= partial('facing_grid', locals: {grid: facing_grid(x: 20, y: 20, units: 30, squares: up_squares)} ) %>

  <% 
    down_squares = [
      [ 
        {colour: data.colours.white, opacity: data.opacity.full },
        {colour: data.colours.white, opacity: data.opacity.full }
      ],
      [ 
        {colour: data.colours.white, opacity: data.opacity.full },
        {colour: data.colours.white, opacity: data.opacity.full }
      ]
    ]
  %>

  <%= partial('facing_grid', locals: {grid: facing_grid(x: 110, y: 20, units: 30, squares: down_squares)} ) %>

  <%= partial('arrow', locals: {arrow: horizontal_arrow(x: 120, y: 58, length: 24, direction: :bi) } ) %>
  <%= partial('arrow', locals: {arrow: horizontal_arrow(x: 30, y: 58, length: 24, direction: :bi) } ) %>
</svg>

