<?xml version="1.0" standalone="no"?>
<!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 1.1//EN"
  "http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd">
<svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="260" height="120">
  <% 
    front_squares = [
      [ 
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        {colour: data.colours.yellow, opacity: data.opacity.faded }
      ],
      [ 
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        nil,
        {colour: data.colours.white, opacity: data.opacity.full },
        nil,
        {colour: data.colours.yellow, opacity: data.opacity.faded }
      ],
      [ 
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        nil,
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        nil,
        {colour: data.colours.yellow, opacity: data.opacity.faded }
      ],
      [ 
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        {colour: data.colours.yellow, opacity: data.opacity.faded }
      ]
    ]
  %>

  <%= partial('facing_grid', locals: {grid: facing_grid(x: 20, y: 20, units: 20, squares: front_squares)} ) %>

  <% 
    back_squares = [
      [ 
        {colour: data.colours.white, opacity: data.opacity.faded },
        {colour: data.colours.white, opacity: data.opacity.faded },
        {colour: data.colours.white, opacity: data.opacity.faded },
        {colour: data.colours.white, opacity: data.opacity.faded },
        {colour: data.colours.white, opacity: data.opacity.faded }
      ],
      [ 
        {colour: data.colours.white, opacity: data.opacity.faded },
        nil,
        {colour: data.colours.yellow, opacity: data.opacity.faded },
        nil,
        {colour: data.colours.white, opacity: data.opacity.faded }
      ],
      [ 
        {colour: data.colours.white, opacity: data.opacity.faded },
        nil,
        {colour: data.colours.white, opacity: data.opacity.faded },
        nil,
        {colour: data.colours.white, opacity: data.opacity.faded }
      ],
      [ 
        {colour: data.colours.white, opacity: data.opacity.faded },
        {colour: data.colours.white, opacity: data.opacity.faded },
        {colour: data.colours.white, opacity: data.opacity.faded },
        {colour: data.colours.white, opacity: data.opacity.faded },
        {colour: data.colours.white, opacity: data.opacity.faded }
      ]
    ]
  %>

  <%= partial('facing_grid', locals: {grid: facing_grid(x: 140, y: 20, units: 20, squares: back_squares)} ) %>

</svg>

