<?xml version="1.0" standalone="no"?>
<!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 1.1//EN"
  "http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd">
<svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="200" height="200">
  <!-- Up face -->
  <polygon points="100,150 80,160 60,150 80,140 60,130 40,140 20,130 60,110 40,100 80,80 140,110 160,100 180,110 140,130 160,140 140,150 120,140" style="fill:<%= data.colours.up %>;stroke:<%= data.colours.stroke %>;stroke-width:1" />

  <!-- Front face -->
  <polygon points="60,110 40,120 40,100" style="fill:<%= data.colours.front %>;stroke:<%= data.colours.stroke %>;stroke-width:1" />
  <polygon points="80,140 60,150 60,130" style="fill:<%= data.colours.front %>;stroke:<%= data.colours.stroke %>;stroke-width:1" />
  <polygon points="60,150 80,160 80,180 60,170" style="fill:<%= data.colours.front %>;stroke:<%= data.colours.stroke %>;stroke-width:1" />
  <polygon points="20,130 40,140 40,160 20,150" style="fill:<%= data.colours.front %>;stroke:<%= data.colours.stroke %>;stroke-width:1" />
  <polygon points="120,140 140,150 140,170 120,160" style="fill:<%= data.colours.front %>;stroke:<%= data.colours.stroke %>;stroke-width:1" />

  <!-- Right face -->
  <polygon points="160,140 160,160 140,170 140,150" style="fill:<%= data.colours.right %>;stroke:<%= data.colours.stroke %>;stroke-width:1" />
  <polygon points="40,140 60,130 60,150 40,160" style="fill:<%= data.colours.right %>;stroke:<%= data.colours.stroke %>;stroke-width:1" />
  <polygon points="80,160 120,140 120,160 80,180" style="fill:<%= data.colours.right %>;stroke:<%= data.colours.stroke %>;stroke-width:1" />
  <polygon points="140,130 180,110 180,130 160,140" style="fill:<%= data.colours.right %>;stroke:<%= data.colours.stroke %>;stroke-width:1" />

  <!-- Transparent -->
  <!-- Up face -->
  <polygon points="80,20 180,70 120,100 20,50" style="fill:<%= data.colours.up %>;opacity:<%= data.opacity.see_through %>;stroke-dasharray:5;stroke:<%= data.colours.stroke %>;stroke-width:1" />

  <!-- Front face -->
  <polygon points="20,50 120,100 120,160 20,110" style="fill:<%= data.colours.front %>;opacity:<%= data.opacity.see_through %>;stroke-dasharray:5;stroke:<%= data.colours.stroke %>;stroke-width:1" />

  <!-- Right face -->
  <polygon points="180,70 180,130 120,160 120,100" style="fill:<%= data.colours.right %>;opacity:<%= data.opacity.see_through %>;stroke-dasharray:5;stroke:<%= data.colours.stroke %>;stroke-width:1" />
</svg>
