<polygon points="<%= face.outline_string %>" style="fill:<%= data.colours.fill %>;stroke:<%= data.colours.stroke %>;stroke-width:1" />
<polygon points="<%= face.inline_string %>" style="fill:none;stroke:<%= data.colours.stroke %>;stroke-width:1" />
<% face.element_shapes.map do |shape| %>
  <polygon points="<%= shape.points_string %>" style="fill:<%= shape.colour %>;stroke:<%= data.colours.stroke %>;stroke-width:1;opacity:<%= shape.opacity %>" />
<% end %>

<% if face.label %>
  <text x="<%= face.label_position[:x] %>" y="<%= face.label_position[:y] %>" style="color:<%= data.colours.stroke %>;font-size:<%= face.label_size %>px;font-family: Helvetica, Arial, sans-serif"><%= face.label %></text>
<% end %>
